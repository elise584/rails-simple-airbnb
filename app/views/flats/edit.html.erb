<h3>Edit Flat</h3>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :picture_url %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_night %>
  <%= f.submit class: 'btn btn-primary'%>
  <%= f.button :button, "Cancel", type: "reset", class: "btn btn-danger" %>
<% end %>
