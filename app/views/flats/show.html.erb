<div class="banner" style="background-image: url(<%= @flat.picture_url %>);">
</div>

<div class="container">
  <div class="row">
    <div class="description col-8">
      <div class="flat-details">
        <h2><strong><%= @flat.name %></strong></h2>
        <p><%= @flat.address %></p>
      </div>
      <div class="flat-details">
        <h4>A bit more about this flat...</h4>
        <p><%= @flat.description %></p>
      </div>
    </div>

    <div class="booking-details col-4">
      <div class="flat-details">
        <h5>Book this place!</h5>
          <form class="form-inline">
            <div class="input-group mb-2 w-100">
              <div class="input-group-prepend">
                <div class="input-group-text">From:</div>
              </div>
              <input type="text" class="form-control" placeholder="05/08/2020">
            </div>
            <div class="input-group mb-2 w-100">
              <div class="input-group-prepend">
                <div class="input-group-text">To:</div>
              </div>
              <input type="text" class="form-control" id="inlineFormInputGroupUsername2" placeholder="25/08/2020">
            </div>
            <button type="submit" class="btn btn-primary mb-2 btn-block">Book</button>
          </form>
      </div>
      <div class="flat-details">
        <h4>Details</h4>
        <i class="fas fa-user-friends"></i><%= " #{@flat.number_of_guests}" %>
        <i class="fas fa-euro-sign"></i><%= " #{@flat.price_per_night}" %>
      </div>
      <div class="flat-details share">
        <p>Share</p>
        <div class="share-links">
          <i class="fab fa-facebook-square"></i>
          <i class="fab fa-twitter-square"></i>
          <i class="fab fa-pinterest-square"></i>
          <i class="fas fa-envelope-square"></i>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Back", flats_path, class: "btn btn-primary" %>
</div>

<%#= image_tag @flat.picture_url, class: "banner"%>


